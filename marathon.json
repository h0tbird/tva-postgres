{
  "id": "/tva/postgres",
  "instances": 1,
  "cpus": 0.1,
  "mem": 512,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "internal",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_postgres"
  },
  "ipAddress": {
    "networkName": "devel",
    "discovery": {
      "ports": [
        { "number": 5432, "name": "postgres", "protocol": "tcp" }
      ]
    }
  },
  "container": {
    "type": "MESOS",
    "docker": {
      "image": "quay.io/kato/tva-postgres:latest",
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "port": 5432,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
