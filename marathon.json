{
  "id": "/tva/postgres",
  "instances": 1,
  "cpus": 0.1,
  "mem": 512,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "owner": "tva",
    "HAPROXY_GROUP": "internal",
    "HAPROXY_DEPLOYMENT_GROUP": "tva_postgres",
    "HAPROXY_DEPLOYMENT_ALT_PORT": "10015"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "katosys/tva-postgres:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 5432, "hostPort": 0, "servicePort": 10014 }
      ],
      "privileged": false,
      "forcePullImage": true
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
